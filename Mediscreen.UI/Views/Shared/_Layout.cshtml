<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mediscreen.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mediscreen.UI.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/627b1d90cf.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <div class="d-flex flex-wrap justify-content-between align-items-center">
            <div style="padding: 0.5em;">
                <h1 class="mx-auto text-center w-100">
                    <a asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 1em; color: black; text-decoration: none; font-weight: 900;">
                        <img src="~/assets/mediscreen-logo.png" alt="Mediscreen" style="height: 2em; margin-left: 0.5em; margin-right: 0.5em;" />
                        Mediscreen
                    </a>
                </h1>
            </div>
            <div style="margin: 1%;">
                <form 
                    method="post" 
                    class="d-flex flex-row justify-content-between align-items-center"
                    style="margin: 1%;"
                >
                    <input type="search" name="search" style="height: 2.5em; border-color: #008499; border-radius: 0.5em 0.5em 0.5em 0.5em" />
                    <div class="d-flex justify-content-center align-items-center"
                        style="
                            margin-left: 0.5em;
                            padding: 0.5em;
                            background-color: #008499; 
                            height: 2.5em; 
                            width: 2.5em; 
                            font-weight: 500; 
                            border-radius: 20%; 
                            color: white;
                        ">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </div>
                </form>
                <p style="color: #008499; font-weight: 500;">
                    Questions? <a href="mailto:contact@mediscreen.com" style="text-decoration: underline; color: #008499!important;">Contact us!</a>
                </p>
            </div>
        </div>
        <nav 
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" 
            style="background-color: #008499; font-weight: 500;"
            >
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link" style="color: white;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="" class="nav-link" style="color: white;">About</a>
                        </li>
                        <li class="nav-item">
                            <a href="" class="nav-link" style="color: white;">Services</a>
                        </li>
                        <li class="nav-item">
                            <a href="" class="nav-link" style="color: white;">Ressources</a>
                        </li>
                        <li class="nav-item">
                            <a href="" class="nav-link" style="color: white;">News Blog</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    @RenderBody()

    <footer class="border-top footer text-muted" style="background-color: #008499">
        <div class="container" style="color: white;">
            &copy; 2024 - Mediscreen.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: white; text-decoration: underline;">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
