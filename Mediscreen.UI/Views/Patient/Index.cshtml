@model IEnumerable<Mediscreen.UI.Models.PatientViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Patient List</h1>

    <p>
        <a href="~/Patient/CreatePatient" class="btn btn-primary">Create new patient</a>
    </p>
    <div class="card-deck d-flex flex-row justify-content align-items">
        @foreach (var patient in Model)
        {
            <div class="card w-25">
                <div class="card-body">
                    <h5 class="card-title">@patient.FirstName @patient.LastName</h5>
                    <a href="@Url.Action("PatientDetails", "Patient", new { id = patient.Id })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        }
    </div>
</div>
