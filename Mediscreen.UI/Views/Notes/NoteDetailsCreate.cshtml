@model Mediscreen.UI.Models.NotesViewModel

@{
    ViewData["Title"] = "Edit Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create new note</h1>

<div class="detail-page">
    <div class="detail">
        <form asp-action="NoteDetailsCreate" asp-controller="Notes" method="post">
            <input name="_RequestVerificationToken" type="hidden" />
            <input type="hidden" name="PatientId" placeholder="PatientId" value="@Model.PatientId" />
            <input type="text" name="Comment" placeholder="Note" />
            <input type="hidden" name="Date" placeholder="Date" />
            <input type="hidden" name="Practitioner" placeholder="Practitioner" />
            <p>
                Does the patient has any of the following triggers?<br/>
                @foreach (var trigger in Model.Triggers)
                {
                    <input type="checkbox" name="Triggers" value="@trigger" /><label for="@trigger.TriggerName">@trigger.TriggerName</label><br/>
                }
            </p>

            <button type=submit>Submit</button>
        </form>
    </div>
</div>